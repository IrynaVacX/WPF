<Window x:Class="WpfApp8_03_TextBoxFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8_03_TextBoxFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tb1" Margin="10,70,10,10" Text="{Binding FileText}" FontSize="18" FontFamily="Lato"/>
        <ToolBar HorizontalAlignment="Center" Height="55" Margin="0,10,0,0" VerticalAlignment="Top" Width="780">
            <Button x:Name="butOpenF" Content="Open file" Margin="10,1,1,1" Click="butOpenF_Click"/>
        </ToolBar>
    </Grid>
</Window>
